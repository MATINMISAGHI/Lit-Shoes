<%- include ("./partials/header") %>

<div class="row">
    <div class="col-12">
        <form class="form-signin" action="/register" method="post">
            <h3 class="mb-3 font-weight-normal">Please sign up</h3>
            <div class="form-group">
                <label for="inputUsername" class="sr-only">Username</label>
                <input class="form-control" id="inputUsername" type="text" name="username" placeholder="username"
                    required autofocus>
            </div>
            <div class="form-group">
                <label for="inputPassword" class="sr-only">Password</label>
                <input class="form-control" id="inputPassword" type="password" name="password" placeholder="password"
                    required>
            </div>
            <div class="form-group">
                <label for="inputFirstN" class="sr-only">First Name</label>
                <input class="form-control" id="inputFirstN" type="text" name="firstName" placeholder="first name"
                    required>
            </div>
            <div class="form-group">
                <label for="inputLastN" class="sr-only">Last Name</label>
                <input class="form-control" id="inputLastN" type="text" name="lastName" placeholder="last name">
            </div>
            <div class="form-group">
                <label for="email" class="sr-only">Email</label>
                <input class="form-control" id="email" type="email" name="email" placeholder="email" required>
            </div>
            <div class="form-group">
                <label for="avatar" class="sr-only">Avatar URL</label>
                <input class="form-control" id="avatar" type="text" name="avatar" placeholder="avatar img url" required>
            </div>
            <div class="form-group">
                <label for="adminCode" class="sr-only">Last Name</label>
                <input class="form-control" id="adminCode" type="text" name="adminCode" placeholder="admin code">
            </div>
            <div class="form-group">
                <label for="signUp" class="sr-only">Sign Up</label>
                <button id="signUp" class="btn btn-lg btn-outline-success btn-block" type="submit">Sign Up!</button>
            </div>
        </form>
        <div class="form-signin">
            <label for="goBK" class="sr-only">Go Back</label>
            <a id="goBK" href="/products">Go Back</a>
        </div>
    </div>
</div>

<%- include ("./partials/footer") %>