<%- include ("../partials/header") %>

<div class="row">
    <div class="col-12 text-center">
        <h1>Edit Your Comment</h1>
    </div>
    <div class="col-12">
        <form class="form-signin" action="/products/<%= product_slug %>/comments/<%= comment._id %>?_method=PUT"
            method='POST'>
            <div class="form-group">
                <label for="commentText" class="sr-only">Comment Text</label>
                <input id="commentText" class="form-control" type="text" name="comment[text]"
                    value="<%= comment.text %>" placeholder="text">
            </div>

            <div class="form-group">
                <label for="submit" class="sr-only">Submit</label>
                <button id="submit" class="btn btn-lg btn-outline-dark btn-block">Submit!</button>
            </div>
        </form>
        <div class="form-signin">
            <label for="goBK" class="sr-only">Go Back</label>
            <a id="goBK" class="btn btn-sm btn-outline-dark" href="/products">Go Back</a>
        </div>
    </div>
</div>

<%- include ("../partials/footer") %>