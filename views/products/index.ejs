<%- include ("../partials/header") %>
<div class="container pb-3">
    <h1 class="text-center" id="company-name"> Lit Shoes </h1>
    <h4 id="jumboDesc" class="text-center">View our hand-picked shoes from all over the world</h4>
</div>
<header class="jumbotron" id="homeJumbo">
    <div class="container">
        <label for="newProduct" class="sr-only">Add New Product</label>
        <form action="/products/new" method="GET">
            <input id="newProduct" type="submit" class="btn btn-lg btn-dark mb-3" value="Add New Product">
        </form>
        <form action="/products" method="GET" class="form-inline" id="product-search">
            <div class="form-group input-group input-group-lg ">
                <label for="searchBar" class="sr-only">Search Products</label>
                <input id="searchBar" type="text" name="search" placeholder="ðŸ”ŽShoes, Seller, Location"
                    class="form-control rounded-pill col-md-12 col-6 col-sm-8">
                <label for="search" class="sr-only">Search it</label>
                <input id="search" type="submit" value="Search" class="btn btn-lg btn-dark ml-1">
            </div>
        </form>
    </div>
</header>

<div class="container-fluid">
    <div class="row text-center" id="product-grid">
        <% products.forEach(function(product){ %>
        <div class="col-lg-3 col-md-4 col-sm-6 mb-4 d-flex align-items-stretch">
            <div class="card ">
                <img class="card-img-top cardImg" src="<%= product.image %>" alt="<%= product.name %>">
                <div class="card-body">
                    <h5 class="card-title"><%= product.name %></h5>
                    <div>
                        <span class="badge-lg badge-pill badge-success"><i class="far fa-thumbs-up"></i>
                            <%= product.likes.length %></span>
                    </div>
                    <div>
                        <% if (product.rating === 0) { %>
                        <p class="text-muted"><em>No reviews yet.</em></p>
                        <% } else { %>
                        <p class="pt-4">
                            <span class="fas fa-star checked"></span>
                            <span
                                class="fas fa-star <% if (product.rating > 1.5) { %> checked <% } else { %> far fa-star <% } %>"></span>
                            <span
                                class="fas fa-star <% if (product.rating > 2.5) { %> checked <% } else { %> far fa-star <% } %>"></span>
                            <span
                                class="fas fa-star <% if (product.rating > 3.5) { %> checked <% } else { %> far fa-star <% } %>"></span>
                            <span
                                class="fas fa-star <% if (product.rating > 4.5) { %> checked <% } else { %> far fa-star <% } %>"></span>
                        </p>
                        <% } %>
                    </div>
                    <label for="info" class="sr-only">More Info</label>
                    <a id="info" href="/products/<%= product.slug %>" class="btn btn-outline-success">More
                        Info</a>
                </div>
            </div>
        </div>
        <% }); %>
    </div>
</div>

<nav aria-label="Page navigation">
    <% if (pages && pages > 0) { %>
    <ul class="pagination justify-content-center">
        <% if (current == 1) { %>
        <li class="page-item disabled"><a class="page-link">First</a></li>
        <% } else { %>
        <li><a class="page-link" href="/products<%if(search){%>?search=<%=search%><%}%>">First</a></li>
        <% } %>
 
        <% if (current == 1) { %>
        <li class=" page-item disabled"><a class="page-link">Â«</a></li>
        <% } else { %>
        <li><a class="page-link" href="/products?page=<%= Number(current) - 1 %><%if(search){%>&search=<%=search%><%}%>">Â«</a></li>
        <% } %>
 
        <% var i = (Number(current) > 5 ? Number(current) - 4 : 1) %>
        <% if (i !== 1) { %>
        <li class=" page-item disabled"><a class="page-link">...</a></li>
        <% } %>

        <% for (; i <= (Number(current) + 4) && i <= pages; i++) { %>
        <% if (i == current) { %>
        <li class="active"><a class="page-link"><%= i %></a></li>
        <% } else { %>
        <li><a class="page-link" href="/products?page=<%= i %><%if(search){%>&search=<%=search%><%}%>"><%= i %></a></li>
        <% } %>
        <% if (i == Number(current) + 4 && i < pages) { %>
        <li class=" page-item disabled"><a class="page-link">...</a></li>
        <% } %>
        <% } %>

        <% if (current == pages) { %>
        <li class="page-item disabled"><a class="page-link">Â»</a></li>
        <% } else { %>
        <li><a class="page-link" href="/products?page=<%= Number(current) + 1 %><%if(search){%>&search=<%=search%><%}%>">Â»</a></li>
        <% } %>
 
        <% if (current == pages) { %>
        <li class=" page-item disabled"><a class="page-link">Last</a></li>
        <% } else { %>
        <li><a class="page-link" href="/products?page=<%= pages %><%if(search){%>&search=<%=search%><%}%>">Last</a></li>
        <% } %>
    </ul>
    <% } %>
</nav>

<%- include ("../partials/footer") %>