<%- include ("../partials/header") %>

<div class="row">
    <div class="col-12 text-center">
        <h3 class="mb-3 font-weight-normal">Edit <%= product.name %></h3>
    </div>
    <div class="col-12">
        <form class="form-signin" action="/products/<%= product.slug %>?_method=PUT" method="POST"
            enctype="multipart/form-data">
            <div class="form-group">
                <label for="prodName" class="sr-only">Product Name</label>
                <input class="form-control" id="prodName" type="text" name="product[name]" value="<%= product.name %>">
            </div>
            <div class="form-group">
                <label for="prodPrice" class="sr-only">Product Price</label>
                <input class="form-control" id="prodPrice" type="number" name="product[price]"
                    value="<%= product.price %>" min="1" step="0.5">
            </div>
            <div class="form-group">
                <label for="prodImage" class="sr-only">Product Image</label>
                <input type="file" id="prodImage" name="image" accept="image/*">
            </div>
            <div class="form-group">
                <label for="prodDesc" class="sr-only">Product Description</label>
                <input class="form-control" id="prodDesc" type="text" name="product[description]"
                    value="<%= product.description %>">
            </div>
            <div class="form-group">
                <label for="prodLoca" class="sr-only">Product Location</label>
                <input class="form-control" id="prodLoca" type="text" name="product[location]" id="prodLoca"
                    value="<%= product.location %>">
            </div>
            <div class="form-group">
                <label for="submit" class="sr-only">Submit</label>
                <button id="submit" class="btn btn-lg btn-outline-dark btn-block">Submit!</button>
            </div>
        </form>
        <div class="form-signin">
            <label for="goBK" class="sr-only">Go Back</label>
            <a id="goBK" href="/products" class="btn btn-outline-dark">Go Back</a>
        </div>
    </div>
</div>

<%- include ("../partials/footer") %>