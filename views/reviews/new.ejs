<%- include ("../partials/header") %>

<div class="container">
    <div class="row">
        <div class="col-12 text-center">
            <h4 class="font-weight-normal">Add a Review <span aria-hidden="true"><i class="far fa-edit"></i></span> to:
                <em>"<%= product.name %>"</em></h4>
        </div>
        <hr>
        <div class="col-12">
            <div class="form-signin">
                <form action="/products/<%= product.slug %>/reviews" method="POST">
                    <div class="form-group">
                        <label for="rating">Leave a rating:</label>
                        <fieldset class="starability-basic form-group" id="rating">
                            <div>
                                <input type="radio" id="first-rate5" name="review[rating]" value="5" text-warning />
                                <label for="first-rate5" title="5 stars - Amazing">
                                    <%- '<span class="fas fa-star text-warning"></span>'.repeat(5) %> <p
                                        class="float-right">
                                        Amazing</p>
                                </label>
                            </div>
                            <div>
                                <input type="radio" id="first-rate4" name="review[rating]" value="4" />
                                <label for="first-rate4" title="4 stars - Very good">
                                    <%- '<span class="fas fa-star text-warning"></span>'.repeat(4) %> <p
                                        class="float-right">
                                        Very good</p>
                                </label>
                            </div>
                            <div>
                                <input type="radio" id="first-rate3" name="review[rating]" value="3" />
                                <label for="first-rate3" title="3 stars - Average">
                                    <%- '<span class="fas fa-star text-warning"></span>'.repeat(3) %> <p
                                        class="float-right">
                                        Average</p>
                                </label>
                            </div>
                            <div>
                                <input type="radio" id="first-rate2" name="review[rating]" value="2" />
                                <label for="first-rate2" title="2 stars - Not good">
                                    <%- '<span class="fas fa-star text-warning"></span>'.repeat(2) %> <p
                                        class="float-right">
                                        Not good</p>
                                </label>
                            </div>
                            <div>
                                <input type="radio" id="first-rate1" name="review[rating]" value="1" />
                                <label for="first-rate1" title="1 star - Terrible">
                                    <%- '<span class="fas fa-star text-warning"></span>'.repeat(1) %> <p
                                        class="float-right">
                                        Terrible</p>
                                </label>
                            </div>

                        </fieldset>
                    </div>
                    <div class="form-group">
                        <textarea class="form-control" type="text" name="review[text]"
                            placeholder="Write a review for this product..." rows="7"></textarea>
                    </div>
                    <div class="form-group">
                        <button class="btn btn-outline-dark btn-block">Submit a Review</button>
                    </div>
                </form>
                <a class="btn btn-outline-dark btn-sm" href="/products/<%= product._slug %>"><i
                        class="fas fa-arrow-left"></i> Home</a>
            </div>
        </div>
    </div>
</div>

<%- include ("../partials/footer") %>